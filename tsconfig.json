{
  "compilerOptions": {
    "module": "ESNext",                      
    "moduleResolution": "node",              
    "esModuleInterop": true,                
    "allowJs": true,                         
    "jsx": "preserve",
    "lib": ["dom", "esnext"],  
    "target": "esnext",       
    "isolatedModules": true,
    "incremental": true,             
    "strict": true,                          
    "skipLibCheck": true,                    
    "noEmit": true,                          
    "resolveJsonModule": true,               
    "types": ["jest", "node"],              
    "baseUrl": ".",                          
    "paths": {
      "@components": ["src/components"]
    }
  },
  "include": ["src/**/*", "jest.setup.ts", "public/**/*", ".next/types/**/*.ts"], 
  "exclude": ["node_modules"]                             
}